{
  "version": "0.0.0",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "*.txt",
        "test/**",
        "**/test/**"
      ],
      "allowBranch": [
        "main"
      ]
    }
  },
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ]
}